<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_book"
        tools:context=".BookActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/textBookAuthor"
            app:layout_constraintEnd_toEndOf="@+id/spinnerGenres"
            app:layout_constraintStart_toStartOf="@+id/spinnerGenres"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textBookTitle"
            android:hint="Book Author"/>

    <Spinner
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:id="@+id/spinnerGenres"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/textBookTitle"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerGenres"
            app:layout_constraintEnd_toEndOf="@+id/spinnerGenres"
            app:layout_constraintStart_toStartOf="@+id/spinnerGenres"
            android:hint="Book title"/>
</androidx.constraintlayout.widget.ConstraintLayout>